# API Environment Configuration
# Copy this file to .env and update with your actual values

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CHAT_HISTORY_TTL=3600

# Search Configuration
USE_NEW_DATA_STRUCTURE=true

# MongoDB Configuration (inherited from injestion config)
# These should already be set in ../injestion/config/.env
# MONGO_URI=mongodb+srv://...
# MONGO_DB_NAME=rag_with_lambda

# Azure OpenAI Configuration (inherited from injestion config)
# These should already be set in ../injestion/config/.env
# AZURE_OPENAI_API_KEY=your_key_here
# AZURE_OPENAI_API_VERSION=2023-05-15
# AZURE_OPENAI_ENDPOINT=https://your-endpoint.openai.azure.com/
# AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Session Configuration
MAX_CHAT_HISTORY_MESSAGES=50
DEFAULT_TOP_K=3
MAX_TOP_K=20
